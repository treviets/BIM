<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/decorators">
	<excludes>
		<pattern>/META-INF/*</pattern>
		<pattern>/login*</pattern>
		<pattern>/workflow</pattern>
		<pattern>/sessionTimeout</pattern>
		<pattern>/sessionTimeoutRedirect</pattern>
		<pattern>/js/*</pattern>
		<pattern>/jsp/*</pattern>
		<pattern>/images/*</pattern>
		<pattern>/reports/*</pattern>
		<pattern>/WEB-INF/decorators/taglib.jsp</pattern>
		<pattern>/ajax/*</pattern>
		<pattern>/adscontrol/*</pattern>
		<pattern>/static/*</pattern>
	</excludes>

	<decorator name="layout" page="/WEB-INF/layout/main-layout.jsp">
		<pattern>*</pattern>	
	</decorator>
	<decorator name="menu" page="/WEB-INF/layout/menu.jsp"/>
	<decorator name="workflow" page="/WEB-INF/layout/workflow-layout.jsp">
		<pattern>/workflow/</pattern>
	</decorator>
</decorators>
